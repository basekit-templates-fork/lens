<![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js home-page" lang="{{ page.seoLang }}">
<!--<![endif]-->

<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>

<body class="{{ page.backgroundClass }}">

	<!-- CONTAINER -->
<div class="template-container">

	<!-- FULL SCREEN SLIDESHOW -->
	{{widget('responsiveslideshow', 'slideshow', {
		'duration':'4',
		'transSpeed': '2000',
		'transType': 'fade',
		'showButtons': false,
		'showBullets': true,
		'allowPause': false,
		'allowLoop': false,
		'crop': true,
		'images':[
		{
			'imageHeight':'auto',
			'imageWidth':'100%',
			'url':asset('images/slide-5.jpg')
		},
		{
			'imageHeight':'auto',
			'imageWidth':'100%',
			'url':asset('images/slide-6.jpg')
		}
		]
	})|raw}}

	<!-- HEADER -->
	{% include "includes/header.twig" %}


	<!-- MAIN SECTION -->
	<div role="main" id="main">

		<div class="container">

			<!-- MAIN ZONE -->
			{{zone('main')|raw}}

		</div>

	</div>

	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

</div>
<!-- END CONTAINER -->

    {% include basekit.bodyScript %}

	<!-- JQUERY -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <!-- PLUGINS -->
    <script src="{{asset('js/main.js')}}"></script>

	{% block scripts %}
	{% endblock %}

</body>
</html>
